{
	"description": "Orchestra Platform Website",
	"license": "proprietary",
	"require": {
		"orchestra/foundation": "2.1.*",
		"orchestra/control": "2.1.*",
		"orchestra/story": "2.1.*",
		"orchestra/dochub": "dev-master"
	},
	"repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/orchestral/dochub"
        }
	],
	"autoload": {
		"psr-0": {
			"Platform": "src/"
		},
		"classmap": [
			"app/database/migrations",
			"app/database/seeds",
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan orchestra:optimize",
			"php artisan asset:publish orchestra/foundation"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan orchestra:optimize",
			"php artisan asset:publish orchestra/foundation"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
